{
  "name": "pintos",
  "displayName": "pintos",
  "description": "pintos runtime",
  "version": "0.0.1",
  "publisher": "gbenm",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pintos.createNewProject",
    "workspaceContains:utils/pintos"
  ],
  "main": "./dist/extension.js",
  "extensionDependencies": ["EditorConfig.EditorConfig"],
  "contributes": {
    "commands": [
      {
        "command": "pintos.createNewProject",
        "title": "Create a new PintOS project"
      },
      {
        "command": "pintos.initProject",
        "title": "Config current directory as PintOS project"
      }
    ],
    "configuration": {
      "title": "PintOS",
      "properties": {
        "pintos.baseRepository": {
          "type": "string",
          "default": "git://pintos-os.org/pintos-anon",
          "description": "The base repository to get a snapshot of the PintOS project",
          "minLength": 5
        },
        "pintos.baseRepositoryCodeFolder": {
          "type": ["null", "string"],
          "default": "src",
          "description": "The folder "
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "list": "npm list --production --json",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "simple-git": "^3.14.1",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "packageManager": "yarn@3.2.3"
}
